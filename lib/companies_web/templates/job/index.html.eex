<section class="section">
  <div class="container">
    <h1 class="title is-3 fancy"><%= gettext("Jobs") %></h1>
    <div class="tabs is-centered">
      <%= form_tag "/jobs", method: "get" do %>
        <div class="columns is-desktop">
          <div class="column">
            <div class="field">
              <div class="control">
                <div class="text">
                  <input aria-label="Job search text" name="search[text]" id="search[text]" class="input" type="text" value=""/>
                </div>
              </div>
            </div>
          </div>
          <div class="column">
            <div class="field">
              <label class="field" for="remote_only">
                <input name="search[remote_only]" type="checkbox" />
                Show only remote jobs
              </label>
            </div>
          </div>
          <div class="column">
            <div class="field">
              <%= submit gettext("Search"), class: "button is-link" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="content">
      <table class="table is-fullwidth">
        <thead>
          <th><%= gettext("Remote") %></th>
          <th><%= gettext("Title") %></th>
          <th><%= gettext("Company") %></th>
          <th><%= gettext("Last update") %></th>
          <%= if signed_in?(@conn) do %>
            <th>Actions</th>
          <% end %>
        </thead>
        <tbody>
          <%= for job <- @jobs do %>
            <%= render "job.html", job: job, conn: @conn %>
          <% end %>
        </tbody>
      </table>
    </div> <!-- /content -->

    <%= pagination_links(@jobs, [next: "Next", previous: "Previous"] ++ query_params(@conn)) %>
  </div> <!-- /container -->
</section>
