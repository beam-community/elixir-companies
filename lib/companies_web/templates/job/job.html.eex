<tr>
  <td>
    <%= if @job.remote do %>
      <span class="icon purple"><i class="fas fa-check-square"></i></span>
    <% end %>
  </td>
  <td>
    <%= link @job.title, to: url_with_scheme(@job.url), target: :blank %>
  </td>
  <td><%= @job.company.name %></td>
  <td>
    <%= relative_time(@job) %>
  </td>
  <%= if signed_in?(@conn) do %>
    <td>
      <%= link to: Routes.job_path(@conn, :edit, locale(@conn), @job) do %>
        <span class="icon"><i class="fas fa-edit"></i></span>
      <% end %>
      |
      <%= link to: Routes.job_path(@conn, :delete, locale(@conn), @job), method: :delete, data: [confirm: gettext("Are you sure you want to delete this job?")] do %>
        <span class="icon"><i class="fas fa-trash-alt"></i></span>
      <% end %>
    </td>
  <% end %>
</tr>
